/* pages/message/message.wxss */

page{
  width: 100%;
  height: 100%;
  background-color: #F5F5F5;
}

.title{
  font-size: 38rpx;
  color: #000;
  padding-left: 20rpx;
  padding-bottom: 40rpx;
  padding-top: 35rpx;
  background-color: #fff;
}
.power-btn{
  width: 80%;
  color: #fff;
  margin-top: 40rpx;
  background: rgb(1, 199, 1);
}

.wrap{
  width: 100%;
  margin-top: 40rpx;
}
/* 头部文字 */
.header-text{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
}
.select-message{
  font-size: 34rpx;
  color: rgb(201, 201, 201);
  font-family: '微软雅黑';
  padding-left: 20rpx;
  padding-top: 50rpx;
}
.write-message{
  font-size: 35rpx;
  color: rgb(64, 212, 6);
  font-family: '微软雅黑';
  /* padding-left: 80%; */
  padding-left: 465rpx;
  padding-top: 40rpx;
}

  /* 最热评论 */
	.comment{
  }
  .comment_title{
    padding: 10rpx;
  }
 .iconpinglun{
    color: aqua;
    font-size: 40rpx;
  }
  .comment_text{
     /* 字体加粗 */
    font-weight: 600;
    font-size: 28rpx;
    color: #666;
    margin-left: 10rpx;
  }
  
  /* 评论内容 */
  .comment_list{
  }
  .comment_item{
    border-bottom: 15rpx solid #eee;
  }
  /* 用户信息 */
	.comment_user{
    display: flex;
    padding: 20rpx 0;
  }
  .user_icon{
    width: 15%;
    padding: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  image{
    /* width: 90%; */
    border-radius: 50%;
    border: 1px solid #1E90FF;
  }
  
  .user_name{
    padding-top: 25rpx;
    flex: 1;
  }
  .user_nickname{
    color: #777;
  }
  .user_time{
    color: #ccc;
    font-size: 30rpx;
    padding: 5rpx;
  }
