    /* 评论数据 */
  .comment_desc{
    display: flex;
    padding: 10rpx 0;
  }
  .comment_content{
    flex: 1;
    padding-left: 15%;
    color: #000;
  }
  .comment_like{
    /* 文字右对齐 */
    text-align: right;
    padding-right: 15rpx;
  }
  
  /* 作者回复 */
  .reply-container{
    display: flex;
    flex-direction: row;
    margin-left: 115rpx;
    margin-top: 10rpx;
  }
  .autor-reply-line{
    width: 6rpx;
    height: 30rpx;
    background-color: rgb(76, 250, 7);
    padding-top: 12rpx;
  }
  .author-text{
    font-size: 30rpx;
    color: #fff;
    /* border-radius: 40%; */
    background-color: #00CD00;
    font-family: '微软雅黑';
    padding-left: 20rpx;
  }
  .reply-message{
    width: 90%;
    font-size: 28rpx;
    color: #000;
    font-family: '微软雅黑';
    padding-left: 115rpx;
    padding-top: 6rpx;
  }
